
<div class="p-5">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>FullName</th>
        <th>City</th>
        <th>num_of_people</th>
        <th>has_child</th>
      </tr>
    </thead>
    <tbody>
      <tr>
          <td><%= @house.id %></td>
          <td><%= @house.fullname %></td>
          <td><%= @house.city %></td>
          <td><%= @house.num_of_people %></td>
          <td><%= @house.has_child %></td>
      </tr>
    </tbody>
  </table>

  <section>
    <h2 class="section-title">Monthly Energy Production<h2>
    <%= column_chart @energyProduction_perMonth, height: "500px", colors: ['#b00'] %>
  </section>

  <section>
    <h2 class="section-title">Monthly data<h2>
    <p class="warning"> â€»click the data you want </p>
    <%= line_chart @output_data %>
  </section>

  <table class="table table-hover">
    <h2 class="section-title">All Data<h2>
    <thead class="thead-light"> 
      <tr>
        <th>Time</th>
        <th>Temperature</th>
        <th>Daylight</th>
        <th>EnergyProduction</th>
      </tr>
    </thead>
    <tbody>
      <% @data.each do |d|%>
        <tr>
          <td><%= d.month_of_year %></td>
          <td><%= d.temperature %></td>
          <td><%= d.daylight %></td>
          <td><%= d.energy_production %></td>
        <% end %>
        </tr>
    </tbody>  
  </table>
</div>